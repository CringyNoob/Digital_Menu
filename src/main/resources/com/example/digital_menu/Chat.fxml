<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.digital_menu.ChatController" spacing="10" style="-fx-padding: 20;">
    <Label text="Chat with Admin" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <ListView fx:id="messageList" prefHeight="300" />
    <HBox spacing="10">
        <TextField fx:id="messageInput" promptText="Type a message..." />
        <Button text="Send" onAction="#sendMessage" />
    </HBox>
</VBox>
