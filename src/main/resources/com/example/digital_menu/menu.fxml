<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.digital_menu.MenuController" spacing="15" style="-fx-padding: 20;" prefWidth="800" prefHeight="600">
    <!-- Top Section: Logo and Welcome Label -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <!-- Logo Image -->
        <ImageView fx:id="logoImage" fitWidth="50" fitHeight="50" preserveRatio="true" />
        <!-- Welcome Label -->
        <Label fx:id="userNameLabel" text="Welcome!" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    </HBox>

    <!-- Scrollable Menu Items Section -->
    <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-border-color: #ccc; -fx-background-color: transparent; -fx-padding: 10;">
        <FlowPane fx:id="menuContainer" hgap="20" vgap="20" style="-fx-padding: 10;" />
    </ScrollPane>

    <!-- Bottom Buttons Section -->
    <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
        <!-- Talk to Admin Button -->
        <Button text="Talk to Admin" onAction="#talkToAdmin" style="-fx-font-size: 14px; -fx-background-color: #5bc0de; -fx-text-fill: white;" />
        <!-- View Order List Button -->
        <Button text="View Order List" onAction="#showOrderList" style="-fx-font-size: 14px; -fx-background-color: #f5a623; -fx-text-fill: white;" />
        <!-- Logout Button -->
        <Button text="Logout" onAction="#logout" style="-fx-font-size: 14px; -fx-background-color: #d9534f; -fx-text-fill: white;" />
    </HBox>
</VBox>
