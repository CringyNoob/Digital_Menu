<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.digital_menu.OrderListController" spacing="10" style="-fx-padding: 20;">
    <Label text="Order List" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <ListView fx:id="orderListView" prefHeight="300" prefWidth="400" />
    <Label fx:id="totalItemsLabel" text="Total Items: 0" style="-fx-font-size: 14px;" />
    <Button fx:id="confirmOrderButton" text="Confirm Order" onAction="#confirmOrder" style="-fx-font-size: 16px; -fx-background-color: #5cb85c; -fx-text-fill: white;" />
</VBox>
